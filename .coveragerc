[run]
source = src
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */site-packages/*
    */__init__.py
    */conftest.py

[report]
# Lignes à exclure de la couverture
exclude_lines =
    # Exclure les blocs pragma
    pragma: no cover
    
    # Exclure les méthodes magiques
    def __repr__
    def __str__
    
    # Exclure les erreurs
    raise AssertionError
    raise NotImplementedError
    
    # Exclure le point d'entrée
    if __name__ == .__main__.:
    
    # Exclure les imports conditionnels
    if TYPE_CHECKING:
    
    # Exclure les méthodes abstraites
    @abstractmethod
    
    # Exclure les pass
    pass
    
    # Exclure les ellipsis
    \.\.\.
    
    # Exclure les loggers
    logger\.

# Configuration supplémentaire
precision = 2
show_missing = True
skip_covered = False
skip_empty = True